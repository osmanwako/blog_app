<%= stylesheet_link_tag("post") %>
<div class="container">
<div class="form-container">
<div class="form-header">Add New Post</span><small> by Osman </small></div>
<%= form_with model: [@user, @post] do |form| %>
    <div class="form-label"><%= form.label :title %></div>
    <div class="form-input"><%= form.text_field :title %></div>
    <div class="form-label"><%= form.label :Description %></div>
    <div class="form-input"><%= form.text_area :text %></div>
    <div><%= form.submit "Post", class: "add-comment" %></div>
  <% end %>
</div>  
</div>